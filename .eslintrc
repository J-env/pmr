{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "standard",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "space-before-function-paren": 0,
    "no-useless-constructor": 0,
    "no-console": 0,
    "semi": ["error", "always"]
  }
}
